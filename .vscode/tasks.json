// .vscode/tasks.json

{
    "version": "2.0.0",
    "tasks": [
        {
        "label": "build with g++",
        "type": "shell",
        "command": "g++",
        "args": [
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}.out"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compile using g++"
        }
    ]
}